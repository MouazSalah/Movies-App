<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:fontFamily">@font/roboto_regular</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/quantum_grey200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Movie title style -->
    <style name="MovieTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontFamily"> @font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Movie info text style -->
    <style name="MovieHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="fontFamily"> @font/roboto_regular</item>
    </style>

    <!-- Movie sub info text style -->
    <style name="MovieSubHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="fontFamily"> @font/roboto_bold</item>
    </style>

    <style name="RoundedImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_8sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_8sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
    </style>

    <style name="MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
